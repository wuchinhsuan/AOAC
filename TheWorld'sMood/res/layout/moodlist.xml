<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Suppose to be list"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/ml_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="14dp"
        android:text="Mood" />

    <Button
        android:id="@+id/ml_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ml_button1"
        android:layout_alignBottom="@+id/ml_button1"
        android:layout_centerHorizontal="true"
        android:text="Map" />

    <Button
        android:id="@+id/ml_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ml_button2"
        android:layout_alignBottom="@+id/ml_button2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="List" />

</RelativeLayout>
